*, *:before, *:after
  margin 0
  padding 0
  -webkit-box-sizing border-box
  box-sizing border-box


@font-face
  font-family CtCommandPrompt
  src url('Command-Prompt-12x16.ttf')
  
ctLightGray = #C0C0C0
ctDarkGray  = #404040
black       = #000000



specifyFont(inputColor, size)
  font-smooth never
  webkit-font-smoothing none
  -webkit-font-smoothing none
  image-rendering pixelated
  font-family Arial
  font-size size
  color inputColor
  line-height 120%
  

inputBasics()
  border none
  outline none
  

body
  background #000000
  color #C0C0C0 
  

.content
  width 100%
  height 100%
  transition all 1s
  

.container
  box-sizing border-box
  // width 100%
  margin-right 50px


.row
  content ''
  display table
  clear both
   

.column
  float left
  width 600px
  min-height 1.75em
 

.indent
  margin-left 50px
   

.spacer
  height 50px


.break
  height 2em
  
    
.point
  transition all 0.25s
  specifyFont(#7c7c6c, 1em)
  font-weight bold
  text-decoration none
  &.big
    specifyFont(#7c7c6c, 2em)
    
.link
  transition all 0.25s
  specifyFont(#7c7c6c, 1em)
  font-weight bold
  text-decoration none
  &:hover
    specifyFont(#175CFE, 1em)
    
.title
  transition all 0.25s
  specifyFont(#175CFE, 4em)
  font-weight bold
  

.header
  transition all 0.25s
  specifyFont(#175CFE, 1em)
  font-weight bold


.block
  display inline-block
  white-space nowrap
    

.input
  transition all 0.5s
  margin-right 1em
  padding-left 1em
  padding-right 0em
  width 185px
  specifyFont(ctLightGray, 1em)
  background ctDarkGray
  inputBasics()

    
.submit
  transition all 0.25s
  width 185px
  padding-left 0em
  padding-right 0em
  specifyFont(black, 1em)
  background ctDarkGray
  text-decoration none

    




